<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.DaftarWaiting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendaftaran Telah Kami Terima !"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textColor="@color/black">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ilustration_registerwaiting">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/regular"
            android:text="Aplikasi Anda telah kami terima silahkan menunggu waktu untuk di verifikasi oleh admin saat jam kerja.">
        </TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cek Status"
            android:layout_marginLeft="20dp"
            android:id="@+id/cekstatus"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp">
        </Button>
    </LinearLayout>
</ScrollView>